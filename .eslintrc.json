{
    "extends": [
      "eslint:recommended", 
      "plugin:import/errors",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier", 
      "prettier/react"
    ],
    "plugins": [
      "react",
      "import",
      "jsx-a11y",
      "react-hooks"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "strict": ["error", "global"],
      "curly": "warn",
      "no-dupe-keys": "error",
      "consistent-return": "error",
      "no-multi-spaces": "error",
      "semi": "off",
      "react/prop-types": 0,
      "no-console": 1,
      "react-hooks/rules-of-hooks": 2,
      "react-hooks/exhaustive-deps": 0,
      "max-len": ["error", { "code": 65 }]
    }
  }